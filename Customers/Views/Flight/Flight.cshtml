@model List<Customers.Models.AirlineModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Flight</title>
    <style>
        .label1{
            font-size:24px;
            color:red;
            font-weight:bold;
            display:block;
        }
        #label2{
            font-size:12px;
            color:blue;
               }

        #customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}    @* odd(tek) even(çift) tableRowun her çift veya tek indisteki childına uygula *@

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>
</head>
<body>
    <h1>A similar example of test.cshtml</h1>
    <p>It is not real work. It is designed for learning purposes.</p>
    <div>
        @Html.Label("Welcome to Razor", new { @class = "label1" })
        @Html.Label("These are my flights", new { @class = "label1", @id = "label2" })


        <table id="customers">
            <tr>
                <th>Name</th>
                <th>PlaneName</th>
                <th>DepartureAirport</th>
                <th>ArrivalAirport</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th>Price</th>
                
                
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.PlaneName)</td>
            <td>@Html.DisplayFor(modelItem => item.DepartureAirport)</td>
            <td>@Html.DisplayFor(modelItem => item.ArrivalAirport)</td>
            <td>@Html.DisplayFor(modelItem => item.Departure)</td>
            <td>@Html.DisplayFor(modelItem => item.Arrival)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>

        </tr>
            }
        </table>
    </div>
</body>
</html>
